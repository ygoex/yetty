{
  "name": "yetty",
  "version": "1.0.0",
  "description": "Yet another starter repository for a website with optional blog using the Eleventy static site generator.",
  "scripts": {
    "eleventy:dev": "cross-env ELEVENTY_ENV=development eleventy --serve",
    "eleventy:prod": "cross-env ELEVENTY_ENV=production eleventy",
    "prebuild": "npm run lint:sass && npm run sass:prod && npm run scripts",
    "build": "npm run clean && npm run eleventy:prod",
    "postbuild": "npm run postcss",
    "dev": "concurrently 'npm run eleventy:dev' 'npm run sass:dev'",
    "start": "npm run dev",
    "debug": "DEBUG=* eleventy",
    "postcss": "postcss dist/assets/styles/main.css --replace",
    "sass:prod": "node-sass src/assets/styles/scss/ --output src/assets/styles/  --output-style compressed",
    "sass:dev": "node-sass src/assets/styles/scss/ --output src/assets/styles/  --source-map true --source-map-contents true -w",
    "lint:sass": "stylelint --fix 'src/assets/styles/scss/**/*.scss' 'src/assets/styles/scss/**/**/*.scss' 'src/assets/styles/scss/**/**/**/*.scss'",
    "scripts": "webpack --mode=production",
    "clean": "rimraf dist",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/ygoex/yetty.git"
  },
  "author": {
    "name": "Yolanda Gorriz Exposito",
    "email": "helloygoex@gmail.com",
    "url": "https://ygoex.com/"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ygoex/yetty/issues"
  },
  "homepage": "https://github.com/ygoex/yetty#readme",
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@11ty/eleventy-navigation": "^0.1.6",
    "@11ty/eleventy-plugin-rss": "^1.1.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.1.0",
    "@fullhuman/postcss-purgecss": "^4.0.3",
    "autoprefixer": "^10.2.5",
    "clean-css": "latest",
    "concurrently": "^6.0.0",
    "critical": "^3.0.0",
    "cross-env": "^7.0.3",
    "eleventy-critical-css": "^0.2.3",
    "html-minifier": "^4.0.0",
    "luxon": "^1.26.0",
    "markdown-it": "^12.0.4",
    "markdown-it-anchor": "^7.1.0",
    "node-sass": "^5.0.0",
    "postcss": "^8.2.8",
    "postcss-cli": "^8.3.1",
    "rimraf": "^3.0.2",
    "stylelint-order": "^4.1.0",
    "webpack": "^5.28.0",
    "webpack-cli": "^4.5.0"
  },
  "dependencies": {
    "mermaid": "^8.9.2"
  }
}
